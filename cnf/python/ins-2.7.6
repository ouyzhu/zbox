ins_src_addr      = http://www.python.org/ftp/python/2.7.6/Python-2.7.6.tar.xz
ins_dep_apt_build_dep = "python2.7"
ins_verify            = "ZBOX_INS_FULLPATH/bin/python2.7 --version 2>&1 | grep '^Python 2.7' &> /dev/null"

# --enable-shared is needed when compile wsgi which used by dijango, --enable-unicode=ucs4 seem need by django/sqllite, why?
ins_make_configure_opts      = "--prefix=ZBOX_INS_FULLPATH --enable-shared --with-ssl --enable-unicode=ucs4"
ins_env_vars                 = 'PYTHON_HOME=ZBOX_INS_FULLPATH PYTHON=${PYTHON_HOME}/bin/python PATH=${PYTHON_HOME}/bin:${PATH} LD_LIBRARY_PATH=${PYTHON_HOME}/lib:${LD_LIBRARY_PATH}'
